  "description": "Simple custom scrollbars",
  "main": "./Scrollik/index-cjs.js",
  "browser": "./Scrollik/index.js",
  "types": "./Scrollik/index.d.ts",
  "files": [
    "Scrollik/*"
  ],
  "dependencies": {
    "classnames": "^2.3.1"
